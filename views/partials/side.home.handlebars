    {{/if_equal}}
    {{/each}}
    {{/each}}

    {{#each this.files}}
    <li class="flex gap-2">
      <span class="material-symbols-outlined">radio_button_unchecked</span>
      <a class=" hover:underline" href="#">{{this.description}}</a>
    </li>
    {{/each}}
    <br>
    {{/each}}
  </ul>

  <h3>Teised kursused</h3>
  <ul>
    <li>
      {{#each courses}}
      {{#if_not_equal this.slug ../courseSlug}}
      <a class=" hover:underline" href="/{{../this.slug}}">{{../this.title}}</a>
      {{/if_not_equal}}
      {{/each}}
    </li>
  </ul>
  </div>
  

    
