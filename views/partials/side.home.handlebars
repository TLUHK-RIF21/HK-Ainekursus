<nav class="sidebar" id="sidebar">
  <!-- this can be better :( -->
  <h3>{{#each courses}}
    {{#if_equal this.slug ../courseSlug}}
    {{../this.title}}
    {{/if_equal}}
    {{/each}}</h3>

  <ul>
    <!-- JÃ¤rgnevalt loetakse "docs", "loengud" ja "concepts" arraysid app.js failist, mis antakse iga res.render() funktsiooniga kaasa.  -->
    <!-- Ainekursusest ja Hindamine lingid -->
    {{#each docs}}
    <li class="flex gap-2 hover:underline">
      <span class="material-symbols-outlined">check_circle</span>
      <a href="/{{../path.courseSlug}}/{{this.slug}}">{{this.name}}</a>
    </li>
    {{/each}} <br>
    <!-- Loengute ja teemade lingid -->
    {{#each loengud}}
    <li class="flex gap-2 hover:underline">
      <span class="material-symbols-outlined">radio_button_unchecked</span>
      <a class=" hover:underline" href="/{{../path.courseSlug}}/{{this.slug}}">{{this.name}}</a>
    </li>
    {{#each this.concepts}}
    <!-- https://stackoverflow.com/questions/14059157/handlebars-js-each-loop-inside-another-each-loop-3 -->
    {{#each ../../concepts}}
    {{#if_equal this.slug ../this }}
    <li class="flex gap-2 hover:underline"><span class="material-symbols-outlined">radio_button_unchecked</span>
      <a class=" hover:underline" href="/{{../../../../path.courseSlug}}/{{../this.slug}}">{{../this.name}}</a>
    </li>
    {{/if_equal}}
    {{/each}}
    {{/each}}

    {{#each this.files}}
    <li class="flex gap-2 hover:underline">
      <span class="material-symbols-outlined">radio_button_unchecked</span>
      <a class=" hover:underline" href="#">{{this.description}}</a>
    </li>
    {{/each}}
    <br>
    {{/each}}
  </ul>

  <h3>Teised kursused</h3>
  <ul>
    <li>
      {{#each courses}}
      {{#if_not_equal this.courseSlug ../path.courseSlug}}
      <a class=" hover:underline" href="/{{../this.courseSlug}}">{{../this.courseName}}</a>
      {{/if_not_equal}}
      {{/each}}
    </li>
  </ul>
</nav>