<!-- dashboard-student.notifications.handlebars -->
<div>
  <h2>Teated</h2>
  <p class="border-b border-stroke mb-0 pb-2">Siin näed viimaseid teateid enda kursuste kohta.</p>
    <div class="flex flex-col divide-y divide-stroke">
      {{#unless courseUpdates7Days }}
        <div class='text-md'>Hiljutised teated puuduvad.</div>
      {{/unless }}
      {{#each (limit courseUpdates7Days 3) }} {{! Limit displayed notifications to 3 }}
        <div class="flex flex-wrap w-full py-2">
          <div class="basis-4/6 shrink-0 grow-0 pr-4">
            <div class="text-sm flex" ><span class="!text-base material-symbols-outlined text-system-red-tlu">notifications</span>{{this.course.courseName}}</div>
          </div>
          <div class="text-sm basis-2/6 shrink-0 grow-0 text-right">{{timeSince this.created_at }}</div>
           
          <a class="basis-4/6 shrink-0 grow-0 pr-4" href="/course/{{this.course.courseSlug}}/about?ref={{this.course.refBranch}}">{{this.body}}</a>

          <div class="text-sm basis-2/6 shrink-0 grow-0 text-right">{{#with (findTeacher this.user.login ../teachers)}}{{this.displayName}}{{/with }}</div>
        </div>
        {{#unless @last}}
          <hr class="mt-4 mb-4">
        {{/unless}}
      {{/each }}
      <div class="pt-4">
        <a class="btn-link" href="/notifications"><span class="material-symbols-outlined">read_more</span>Kõik teated</a>
      </div>
  </div>
</div>