<!-- course.handlebars -->
<div class="side-btn-wrapper">
  <button id="left-side-button" onclick='panMainContentLeft()' class="">
    <i class="material-symbols-outlined cursor-pointer text-xxxl text-brand_red  transition ease-in-out duration-1000" aria-hidden="true">chevron_left</i>
  </button>
  <button id="right-side-button" onclick='panMainContentRight()' class="">
    <i class="material-symbols-outlined cursor-pointer text-xxxl text-brand_red  transition ease-in-out duration-1000" aria-hidden="true">chevron_right</i>
  </button>
</div>
<div class="main-wrapper flex flex-row grow justify-between overflow-x-hidden lg:overflow-x-clip lg:left-pan lg:right-pan">
  <aside class="left-side-menu">
    <!-- Refers to sidebar-left-course.handlebars fail in /partials folder -->
    {{> sidebar-left.course }}
  </aside>

  <main id="main-content" class="main px-4 py-16">
 
    <!-- Refers to content.handlebars fail in /partials folder -->
    {{> content.course }}

  </main>
  <aside class="right-side-menu block px-4 py-16">
   
    {{> sidebar-right.anchors }}

  </aside>
</div>